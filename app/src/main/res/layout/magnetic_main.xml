<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <TextView
        android:id="@+id/textview_track1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/track1"
        android:textColor="@color/color_6b6b6b" />

    <EditText
        android:id="@+id/editText_track1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:enabled="false"
        android:textColor="@color/color_6b6b6b" >

        <requestFocus />
    </EditText>

    <View style="@style/Divider" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/track2"
        android:textColor="@color/color_6b6b6b" />

    <EditText
        android:id="@+id/editText_track2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:enabled="false"
        android:textColor="@color/color_6b6b6b" >

        <requestFocus />
    </EditText>

    <View style="@style/Divider" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/track3"
        android:textColor="@color/color_6b6b6b" />

    <EditText
        android:id="@+id/editText_track3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:enabled="false"
        android:textColor="@color/color_6b6b6b" >

        <requestFocus />
    </EditText>

    <View style="@style/Divider" />

    <Button
        android:id="@+id/button_open"
        style="@style/buttonNumberStyle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_number_violet_shape"
        android:text="@string/read_card" />

    <Button
        android:id="@+id/button_quit"
        style="@style/buttonNumberStyle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_number_violet_shape"
        android:text="@string/quit" />

</LinearLayout>