<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar" />
    <Button
        android:id="@+id/btn_green_on"
        android:layout_width="match_parent"
        style="@style/buttonNumberStyle"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/Green"
        android:text="Green_led_on"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_green_off"
        android:layout_width="match_parent"
        style="@style/buttonNumberStyle"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/Green"
        android:text="Green_led_off"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_orange_on"
        android:layout_width="match_parent"
        style="@style/buttonNumberStyle"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/Orange"
        android:text="Orange_led_on"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_orange_off"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        style="@style/buttonNumberStyle"
        android:backgroundTint="@color/Orange"
        android:text="Orange_led_off"
        android:layout_height="wrap_content" />

</LinearLayout>